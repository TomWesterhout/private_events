<% provide(:title, "All events") %>
<div class="row">
	<section class="col-xs-12 col-sm-10 col-md-8 col-lg-6">
		<% if @events.any? %>
			<% @events.each do |event| %>
				<div>
					<ul>
						<li><h3><%= event.name %></h3></li>
						<li><%= event.description %></li>
						<li><%= event.location %></li>
						<li><%= event.date %></li>
						<li><%= event.time %></li>
					</ul>
				</div>
			<% end %>
		<% end %>
	</section>
</div>