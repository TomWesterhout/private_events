<header>
	<div class="container">
		<nav>
			<ul class="nav navbar-nav navbar-left">
				<li><%= link_to "Private Events", root_path, id: "logo" %></li>
			</ul>
		</nav>
		<nav>
			<ul class="nav navbar-nav navbar-right">
				<li>
					<%= link_to root_url do %>
						<i class="glyphicon glyphicon-home"></i> Home
					<% end %>
				</li>
				<% if logged_in? %>
					<li>
						<%= link_to events_path do %>
							<i class="glyphicon glyphicon-list-alt"></i> Events
						<% end %>
					</li>
					<li>
						<%= link_to new_event_path do %>
							<i class="glyphicon glyphicon-plus"></i> Create event
						<% end %>
					</li>
					<li class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown">  <i class="glyphicon glyphicon-user"></i>
							<%= current_user.name %><b class="caret"></b>
						</a>
						<ul class="dropdown-menu">
							<li><%= link_to "Profile", current_user %></li>
							<li><%= link_to "Settings", edit_user_path(current_user) %></li>
							<li class="divider"></li>
							<li><%= link_to "Log out", logout_path, method: 'delete' %></li>
						</ul>
					</li>
				<% else %>
					<li>
						<%= link_to login_path do %>
							<i class="glyphicon glyphicon-user"></i> Log in
						<% end %>
					</li>
				<% end %>
			</ul>
		</nav>
	</div>
</header>