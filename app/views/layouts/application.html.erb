<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= render 'layouts/rails_default' %>
  </head>
  <body>
    <%= render 'layouts/header' %>
  	<div class="content">
      <div class="jumbotron">
        <div class="text-center col-xs-12 col-xs-offset-0 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
          <% flash.each do |message_type, message| %>
            <%= content_tag(:div, message, class: "alert alert-#{ message_type}") %>
          <% end %>
        </div>
        <div class="container">
          <%= yield %>
        </div>
      </div>
    </div>
    <%= render 'layouts/footer' %>
  </body>
</html>
