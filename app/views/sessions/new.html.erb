<div class="row">
	<div class="col-xs-12 col-xs-offset-0 col-sm-8 col-sm-offset-2 col-md-8 col-md-offset-2 content-div">
		<h1>Log in</h1>
		<% provide(:title, "Signup") %>
		<%= form_for(:session, url: login_path) do |f| %>
			<%= f.label :name %>
			<%= f.text_field :name, class: 'form-control' %>
		
			<%= f.label :password %>
			<%= f.password_field :password, class: 'form-control' %>
		
			<%= f.label :remember_me, class: 'checkbox-inline' %>
			<%= f.check_box :remember_me %>
			<br>
			<%= f.submit 'Log in', class: 'btn btn-primary center-block' %>
		<% end %>
	</div>
</div>