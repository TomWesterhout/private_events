<% provide(:title, @user.name) %>
<div class="row">
	<aside class="col-xs-12 col-xs-offset-0 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-0">
		<h1><%= @user.name %></h1>
		<% if @user.hosted_events.any? %>
			<h3>Hosted events</h3>
			<% @user.hosted_events.each do |event| %>
					<ul>
						<li><h4><%= event.name %></h4></li>
						<li>Description: <%= event.description %></li>
						<li>Location: <%= event.location %></li>
						<li>Date: <%= event.date.strftime("%d-%m-%Y") %></li>
						<li>Time: <%= event.time.strftime("%H:%M") %></li>
					</ul>
			<% end %>
		<% end %>
	</aside>
	<div class="col-xs-12 col-xs-offset-0 col-sm-8 col-sm-offset-2 col-md-3 col-md-offset-1">
		<ul>
			<li><h3>Upcoming events</h3></li>
			<% if @upcoming_events.any? %>
				<% @upcoming_events.each do |upevent| %>
					<li><%= link_to upevent.name, upevent %></li>
				<% end %>
			<% else %>
				<li>No invites for upcoming events.</li>
			<% end %>
		</ul>
	</div>
	<div class="col-xs-12 col-xs-offset-0 col-sm-8 col-sm-offset-2 col-md-3 col-md-offset-1">
		<ul>
			<li><h3>Previous events</h3></li>
			<% if @previous_events.any? %>
				<% @previous_events.each do |prevent| %>
					<li><%= link_to prevent.name, prevent %></li>
				<% end %>
			<% else %>
				<li>No previous events attended.</li>
			<% end %>
		</ul>
	</div>
</div>